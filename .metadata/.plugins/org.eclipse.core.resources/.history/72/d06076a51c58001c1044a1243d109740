package aplicacao;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

public class Lista {

	public static void main(String[] args) {

		List<String> list = new ArrayList<>();

		list.add("Sandro");
		list.add("Bianca");
		list.add("Manuela");
		list.add(1, "Santos");// adicionando elementos na lista

		System.out.println(list.size());// Tamanho da lista
		for (String x : list) {
			System.out.println(x);
		}

		System.out.println("----------------------------");

		list.removeIf(x -> x.charAt(0) == 'M');// remove quem tiver a primeira letra M

		System.out.println(list.size());// Tamanho da lista
		for (String x : list) {
			System.out.println(x);
		}
		System.out.println("----------------------------");

		System.out.println("Posição da Bianca: " + list.indexOf("Bianca"));

		System.out.println("----------------------------");

		List<String> result = list.stream().filter(x -> x.charAt(0) == 'S').collect(Collectors.toList());
		for (String x : result) {
			System.out.println(x);
		}

	}

}
